{
	"extends": "@roo-code/config-typescript/base.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src", "scripts", "*.config.ts"],
	"exclude": ["node_modules", "dist"]
}
