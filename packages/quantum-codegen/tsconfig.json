{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules", 
		"dist", 
		"**/__tests__",
		"src/HardwareAwareGenerator.ts",
		"src/RealTimePhysicsValidator.ts"
	]
}
