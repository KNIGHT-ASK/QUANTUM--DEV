{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["scripts/*.ts", "examples/*.ts", "tests/*.ts", "packages/*/src/**/*.ts"],
	"exclude": ["node_modules", "**/node_modules", "**/dist", "**/*.test.ts"]
}
